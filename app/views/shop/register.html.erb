<h1>新規登録</h1>
<%= bootstrap_form_tag url: register_path, layout: :horizontal do |f| %>
    <%= f.text_field :user_id, label: 'ユーザーID（半角英数字）' %>
    <%= f.password_field :password, label: 'パスワード' %>
    <%= f.text_field :username, label: 'ユーザー名（日本語可）' %>
    <%= f.form_group do %>
        <%= f.submit "登録", class: 'btn btn-success' %>
    <% end %>
<% end %>
